#!/usr/bin/env python3
"""Cd nvim host instance"""
import os
import sys

try:
    from neovim import attach
    addr = os.environ.get("NVIM_LISTEN_ADDRESS", None)
except:
    addr = False

if (not addr) or (len(sys.argv) != 2):
    sys.exit(1)

nvim = attach("socket", path=addr)

try:
    # This will break if the path contains a quote
    # Solution: Don't use paths with quotes! ;)
    nvim.command("""let b:terminal_path = fnameescape('{}')\n\
    exe "cd " . b:terminal_path""".format(sys.argv[1]))
finally:
    nvim.stop_loop()

