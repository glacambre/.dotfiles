#!/bin/sh

MENU=dmenu

if which wofi >/dev/null 2>/dev/null ; then
        MENU="wofi -d"
fi

if which bemenu >/dev/null 2>/dev/null ; then
        MENU="bemenu -i"
fi

$(find -L $(echo "$PATH" | sed 's@:@ @g') -maxdepth 1 -executable -type f 2>/dev/null | sort -u | $MENU -p "$(date +%H:%M) $(acpi | grep -o '[0-9]*%' | grep -v '^0%$')") &
