[alias]
	cb = !git branch --merged | egrep -v \"(^\\*|master|dev)\" | xargs git branch -d && git remote prune origin
	stats = !git ls-files | xargs -n1 git blame -w -M -C -C --line-porcelain | sed -n 's/^author //p' | sort -f | uniq -ic | sort -nr
	find-merge = "!sh -c 'commit=$0 && branch=${1:-HEAD} && (git rev-list $commit..$branch --ancestry-path | cat -n; git rev-list $commit..$branch --first-parent | cat -n) | sort -k2 -s | uniq -f1 -d | sort -n | tail -1 | cut -f2'"
	show-merge = "!sh -c 'merge=$(git find-merge $0 $1) && [ -n \"$merge\" ] && git show $merge'"
[branch]
	sort = committerdate
[commit]
	verbose = true
	; gpgsign = true
[diff]
	algorithm = patience
	renames = copy
	colorMoved = dimmed-zebra
[init]
	defaultBranch = master
[log]
	decorate = short
	date = iso
[merge]
	tool = fugitive
[mergetool "fugitive"]
	cmd = nvim -f -c "Gvdiffsplit!" "$MERGED"
[push]
	default = current
[url "git@github.com:"]
	pushInsteadOf = "https://github.com/"
	pushInsteadOf = "git://github.com/"
[user]
	name = Ghjuvan Lacambre
	email = lacambre@adacore.com
	signingkey = B9625DB1767553AC
[rebase]
	updateRefs = true
[rerere]
	enabled = false
	autoupdate = true
